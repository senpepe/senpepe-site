<script>
  // Year
  document.getElementById('year').textContent = new Date().getFullYear();

  // Terms of Service functionality
  function openTerms() {
      document.getElementById('termsModal').classList.add('active');
  }
  
  function closeTerms() {
      document.getElementById('termsModal').classList.remove('active');
  }
  
  function openPrivacyPolicy() {
      document.getElementById('privacyPolicyModal').classList.add('active');
  }
  
  function closePrivacyPolicy() {
      document.getElementById('privacyPolicyModal').classList.remove('active');
  }
  
  function openRiskDisclaimer() {
      document.getElementById('riskDisclaimerModal').classList.add('active');
  }
  
  function closeRiskDisclaimer() {
      document.getElementById('riskDisclaimerModal').classList.remove('active');
  }
  
  function acceptTerms() {
      // Hide the terms agreement banner
      document.getElementById('termsAgreement').classList.add('hidden');
      
      // Set a cookie/localStorage to remember acceptance
      localStorage.setItem('termsAccepted', 'true');
      
      // Enable wallet functionality and other features
      enableWalletFeatures();
  }
  
  function enableWalletFeatures() {
      // Enable your wallet integration and other features here
      console.log('Terms accepted - enabling features');
      
      // Enable "Add to Wallet" button after launch
      setupWalletIntegration();
  }
  
  // Check if user already accepted terms
  document.addEventListener('DOMContentLoaded', function() {
      if (localStorage.getItem('termsAccepted')) {
          document.getElementById('termsAgreement').classList.add('hidden');
          enableWalletFeatures();
      }
      
      // Close modals when clicking outside
      document.getElementById('termsModal').addEventListener('click', function(e) {
          if (e.target === this) {
              closeTerms();
          }
      });
      
      document.getElementById('privacyPolicyModal').addEventListener('click', function(e) {
          if (e.target === this) {
              closePrivacyPolicy();
          }
      });
      
      document.getElementById('riskDisclaimerModal').addEventListener('click', function(e) {
          if (e.target === this) {
              closeRiskDisclaimer();
          }
      });
  });

  // Fixed launch date: October 17, 2025 at 7:00 PM (local time)
  const launchDate = new Date('2025-10-17T19:00:00');
  let priceUpdateInterval = null;
  
  function updateCountdown() {
    const now = Date.now(), d = launchDate - now;
    if (d < 0) {
      document.getElementById('countdown').innerHTML = '<div class="prelaunch-badge">SENPEPE Has Launched!</div>';
      // Flip info launch status to LIVE
      const il = document.getElementById('infoLaunch'); if (il) il.textContent = 'LIVE';
      
      // Show price update pulse after launch
      document.getElementById('priceUpdatePulse').style.display = 'flex';
      
      // Start price update simulation (replace with real API calls)
      startPriceUpdates();
      
      // Show buy banner
      showBuyBanner();
      
      // Enable "Add to Wallet" button with contract (if terms accepted)
      if (localStorage.getItem('termsAccepted')) {
          enableAddToWallet();
      }
      
      return;
    }
    const DD = Math.floor(d/86400000),
          HH = Math.floor(d%86400000/3600000),
          MM = Math.floor(d%3600000/60000),
          SS = Math.floor(d%60000/1000);
    days.textContent=String(DD).padStart(2,'0');
    hours.textContent=String(HH).padStart(2,'0');
    minutes.textContent=String(MM).padStart(2,'0');
    seconds.textContent=String(SS).padStart(2,'0');
  }
  setInterval(updateCountdown,1000); updateCountdown();

  // Toggle LIVE badge when countdown hits zero
  (function(){
    const dot=document.getElementById('statusDot');
    const _old=updateCountdown;
    window.updateCountdown=function(){
      _old();
      const d = new Date('2025-10-17T19:00:00') - Date.now();
      dot.style.display = d<=0 ? 'block':'none';
    };
  })();

  // Price update simulation (replace with real API calls)
  function startPriceUpdates() {
    // Clear any existing interval
    if (priceUpdateInterval) clearInterval(priceUpdateInterval);
    
    // Update price every 30 seconds
    priceUpdateInterval = setInterval(() => {
      // Simulate price changes (replace with real API calls)
      const priceUsd = document.getElementById('priceUsd');
      const priceSol = document.getElementById('priceSol');
      const mcap = document.getElementById('mcap');
      
      if (priceUsd.textContent === 'TBA') {
        // Initial price setting
        priceUsd.textContent = '$0.0000123';
        priceSol.textContent = '0.00000045 SOL';
        mcap.textContent = '$1.23M';
      } else {
        // Simulate price fluctuation
        const currentPrice = parseFloat(priceUsd.textContent.replace('$', ''));
        const change = (Math.random() - 0.5) * 0.000001; // Small random change
        const newPrice = Math.max(0.000001, currentPrice + change);
        priceUsd.textContent = '$' + newPrice.toFixed(7);
        
        // Update SOL price proportionally
        const currentSolPrice = parseFloat(priceSol.textContent.split(' ')[0]);
        const newSolPrice = Math.max(0.0000001, currentSolPrice + (change / 27.5)); // Rough SOL conversion
        priceSol.textContent = newSolPrice.toFixed(8) + ' SOL';
        
        // Update market cap
        const currentMcap = parseFloat(mcap.textContent.replace('$', '').replace('M', ''));
        const newMcap = Math.max(0.5, currentMcap + (Math.random() - 0.5) * 0.1);
        mcap.textContent = '$' + newMcap.toFixed(2) + 'M';
      }
      
      // Pulse animation for visual feedback
      const pulse = document.getElementById('priceUpdatePulse');
      pulse.style.animation = 'none';
      setTimeout(() => {
        pulse.style.animation = 'pulse 0.5s ease';
      }, 10);
    }, 30000); // Update every 30 seconds
  }

  // Show buy banner notification
  function showBuyBanner() {
    const banner = document.getElementById('buyBanner');
    banner.classList.add('show');
    
    // Auto-hide after 10 seconds
    setTimeout(() => {
      banner.classList.remove('show');
    }, 10000);
    
    // Show again every 2 minutes
    setInterval(() => {
      banner.classList.add('show');
      setTimeout(() => {
        banner.classList.remove('show');
      }, 10000);
    }, 120000);
  }

  // Enable "Add to Wallet" button with contract
  function enableAddToWallet() {
    const addWalletBtn = document.getElementById('addWalletBtn');
    const caElement = document.getElementById('ca');
    const qrNote = document.getElementById('qrNote');
    
    // Set the contract address (replace with actual contract)
    const contractAddress = 'SENPEPE_CONTRACT_ADDRESS_HERE'; // Replace with actual contract
    caElement.textContent = contractAddress;
    
    // Enable the button
    addWalletBtn.classList.remove('disabled');
    addWalletBtn.textContent = 'Add to Wallet';
    addWalletBtn.setAttribute('aria-disabled', 'false');
    
    // Update QR code note
    qrNote.textContent = 'Scan to add to wallet';
  }

  // Enhanced wallet integration with simple confirmation
  function setupWalletIntegration() {
    const addWalletBtn = document.getElementById('addWalletBtn');
    if (addWalletBtn) {
        addWalletBtn.addEventListener('click', function() {
            // Simple confirmation instead of multiple scary warnings
            if (confirm('Always verify contract addresses from official sources before adding to your wallet. Continue?')) {
                // Your wallet integration code here
                if (window.solana && window.solana.isPhantom) {
                    // Phantom wallet integration
                    window.solana.connect().then(() => {
                        // Add token logic
                        const contractAddress = document.getElementById('ca').textContent;
                        window.solana.request({
                            method: 'addToken',
                            params: {
                                tokenAddress: contractAddress,
                                tokenSymbol: 'SENPEPE',
                                tokenDecimals: 9,
                                tokenImage: 'https://yourdomain/assets/senpepe-main.png'
                            }
                        }).then(() => {
                            toast('SENPEPE added to your wallet!');
                        });
                    });
                } else {
                    // Fallback
                    const contractAddress = document.getElementById('ca').textContent;
                    navigator.clipboard.writeText(contractAddress).then(() => {
                        toast('Contract address copied. Please verify before using.');
                    });
                }
            }
        });
    }
  }

  // Auto-population function for launch data
  async function populateLaunchData(contractAddress, tokenData = {}) {
      // Update contract address
      document.getElementById('ca').textContent = contractAddress;
      
      // Enable wallet functionality
      const addWalletBtn = document.getElementById('addWalletBtn');
      addWalletBtn.classList.remove('disabled');
      addWalletBtn.setAttribute('aria-disabled', 'false');
      addWalletBtn.textContent = 'Add to Wallet';
      
      // Generate QR code for contract
      const qrNote = document.querySelector('.qr small');
      qrNote.textContent = 'Scan to add to wallet';
      
      // Update all TBA fields with actual data
      const updates = {
          // Prices and metrics (you can get these from your DEX/api)
          priceUsd: tokenData.priceUsd || '$0.0000123',
          priceSol: tokenData.priceSol || '0.00000045 SOL',
          mcap: tokenData.mcap || '$1.23M',
          liq: tokenData.liq || '$250K',
          supply: tokenData.supply || '1B',
          tax: tokenData.tax || '0%',
          
          // Contract details
          infoDecimals: tokenData.decimals || '9',
          
          // Safety features
          lpLock: tokenData.lpLock || '90 days',
          audit: tokenData.audit || 'Pending',
          ownership: tokenData.ownership || 'Renounced'
      };
      
      // Apply updates
      Object.keys(updates).forEach(key => {
          const element = document.getElementById(key);
          if (element) element.textContent = updates[key];
      });
      
      // Update buy button to actual DEX links
      const buyBtn = document.getElementById('buyBtn');
      buyBtn.textContent = 'Buy $SENPEPE Now';
      buyBtn.href = `https://jup.ag/swap/SOL-SENPEPE_${contractAddress}`;
      buyBtn.removeAttribute('aria-disabled');
      
      // Update DEX links in "How to Buy" section
      document.querySelectorAll('.pill.primary.disabled').forEach(btn => {
          btn.classList.remove('disabled');
          btn.setAttribute('aria-disabled', 'false');
          if (btn.textContent.includes('Jupiter')) {
              btn.href = `https://jup.ag/swap/SOL-SENPEPE_${contractAddress}`;
              btn.textContent = 'Buy on Jupiter';
          } else if (btn.textContent.includes('Raydium')) {
              btn.href = `https://raydium.io/swap/?inputCurrency=sol&outputCurrency=${contractAddress}`;
              btn.textContent = 'Buy on Raydium';
          }
      });
      
      // Show live trading indicators
      document.getElementById('priceUpdatePulse').style.display = 'flex';
      startPriceUpdates(); // Start real price updates
      
      console.log('Launch data populated successfully!');
  }

  // ===== ENHANCED VERIFICATION SYSTEMS =====

  // Twitter Verification with actual validation
  async function verifyTweetLink() {
      const tweetLink = document.getElementById('tweetLink').value.trim();
      const user = engagementData.users[userId];
      
      // Basic validation
      if (!tweetLink.includes('twitter.com') && !tweetLink.includes('x.com')) {
          showNotification('âŒ Please enter a valid Twitter/X link');
          return;
      }
      
      if (!tweetLink.includes('/status/')) {
          showNotification('âŒ Please link directly to your tweet (not your profile)');
          return;
      }
      
      // Extract tweet ID for verification
      const tweetId = extractTweetId(tweetLink);
      if (!tweetId) {
          showNotification('âŒ Invalid tweet link format');
          return;
      }
      
      // Check if this tweet was already verified
      user.verifiedTweets = user.verifiedTweets || [];
      if (user.verifiedTweets.includes(tweetLink)) {
          showNotification('âŒ This tweet has already been verified');
          return;
      }
      
      // Rate limiting
      const now = Date.now();
      const lastTwitterAction = user.lastTwitterAction || 0;
      const cooldownTime = 2 * 60 * 1000; // 2 minutes
      
      if (now - lastTwitterAction < cooldownTime) {
          const remaining = Math.ceil((cooldownTime - (now - lastTwitterAction)) / 1000);
          document.getElementById('twitterCooldown').textContent = `Please wait ${remaining} seconds`;
          document.getElementById('twitterCooldown').style.display = 'block';
          return;
      }
      
      // Show verification in progress
      showNotification('ðŸ” Verifying tweet...');
      
      try {
          // Simulate actual verification (replace with real API calls)
          const isVerified = await simulateTweetVerification(tweetId, user.username);
          
          if (isVerified) {
              // Successful verification
              user.verifiedTweets.push(tweetLink);
              user.lastTwitterAction = now;
              user.twitterStats.tweets = (user.twitterStats.tweets || 0) + 1;
              user.twitterStats.points = (user.twitterStats.points || 0) + activityPoints.twitterVerified;
              
              awardPoints(activityPoints.twitterVerified, 'twitterVerified');
              addActivity('twitterVerified', `Verified tweet: ${tweetLink.substring(0, 30)}...`);
              
              closeTwitterVerification();
              showNotification('âœ… Tweet verified! +5 points');
              
              // Update leaderboard
              updateTwitterLeaderboard();
              updateTwitterStats();
          } else {
              showNotification('âŒ Could not verify tweet. Make sure it contains #SENPEPE and is public.');
          }
      } catch (error) {
          showNotification('âŒ Verification failed. Please try again.');
      }
      
      document.getElementById('twitterCooldown').style.display = 'none';
  }

  // Extract tweet ID from URL
  function extractTweetId(url) {
      const match = url.match(/(?:twitter\.com|x\.com)\/\w+\/status\/(\d+)/);
      return match ? match[1] : null;
  }

  // Simulate tweet verification (replace with real API)
  async function simulateTweetVerification(tweetId, username) {
      // In a real implementation, you would:
      // 1. Call Twitter API to get tweet details
      // 2. Check if tweet contains required hashtags (#SENPEPE)
      // 3. Verify it's from the correct user
      // 4. Check if it's a recent tweet
      
      // Simulate API delay
      await new Promise(resolve => setTimeout(resolve, 2000));
      
      // Simulate verification criteria
      const hasRequiredContent = Math.random() > 0.3; // 70% success rate
      const isRecent = Math.random() > 0.2; // 80% success rate
      
      return hasRequiredContent && isRecent;
  }

  // Enhanced Meme Submission Verification
  async function submitMemeForVerification() {
      const title = document.getElementById('memeTitle').value.trim();
      const url = document.getElementById('memeUrl').value.trim();
      const user = engagementData.users[userId];
      
      if (!title || !url) {
          showNotification('âŒ Please provide both a title and image URL');
          return;
      }
      
      // Validate URL format
      if (!isValidImageUrl(url)) {
          showNotification('âŒ Please enter a valid image URL (Imgur, etc.)');
          return;
      }
      
      // Rate limiting
      const now = Date.now();
      const lastMemeAction = user.lastMemeAction || 0;
      const cooldownTime = 2 * 60 * 1000; // 2 minutes
      
      if (now - lastMemeAction < cooldownTime) {
          const remaining = Math.ceil((cooldownTime - (now - lastMemeAction)) / 1000);
          document.getElementById('memeCooldown').textContent = `Please wait ${remaining} seconds`;
          document.getElementById('memeCooldown').style.display = 'block';
          return;
      }
      
      // Validate image
      showNotification('ðŸ” Validating meme...');
      
      try {
          const isValidImage = await validateImageUrl(url);
          
          if (isValidImage) {
              user.lastMemeAction = now;
              user.memesCreated = (user.memesCreated || 0) + 1;
              
              // Add to meme contest submissions
              const submission = {
                  id: 'meme_' + Date.now(),
                  title: title,
                  imageUrl: url,
                  author: user.username || 'Anonymous',
                  votes: 0,
                  timestamp: new Date().toISOString(),
                  verified: true
              };
              
              engagementData.memeContest.submissions.push(submission);
              user.memeSubmissions = user.memeSubmissions || [];
              user.memeSubmissions.push(submission.id);
              
              awardPoints(activityPoints.createMeme, 'memeSubmitted');
              addActivity('memeSubmitted', `Submitted meme: ${title}`);
              closeMemeSubmission();
              showNotification('ðŸŽ¨ Meme submitted and verified! +15 points');
              
              updateMemeSubmissions();
          } else {
              showNotification('âŒ Invalid image or URL not accessible');
          }
      } catch (error) {
          showNotification('âŒ Image validation failed. Please try another URL.');
      }
      
      document.getElementById('memeCooldown').style.display = 'none';
  }

  // Validate image URL
  function isValidImageUrl(url) {
      const imageExtensions = ['.jpg', '.jpeg', '.png', '.gif', '.webp'];
      const imageHosts = ['imgur.com', 'i.imgur.com', 'ibb.co', 'i.ibb.co', 'cdn.discordapp.com'];
      
      const urlLower = url.toLowerCase();
      const isImageExtension = imageExtensions.some(ext => urlLower.includes(ext));
      const isImageHost = imageHosts.some(host => urlLower.includes(host));
      
      return isImageExtension || isImageHost;
  }

  // Validate image URL accessibility
  async function validateImageUrl(url) {
      return new Promise((resolve) => {
          const img = new Image();
          img.onload = () => resolve(true);
          img.onerror = () => resolve(false);
          img.src = url;
          
          // Timeout after 5 seconds
          setTimeout(() => resolve(false), 5000);
      });
  }

  // Enhanced Daily Check-in with IP verification
  function setupDailyCheckin() {
      document.getElementById('dailyCheckin').addEventListener('click', function() {
          const user = engagementData.users[userId];
          const today = new Date().toDateString();
          
          // Check if already checked in today
          if (user.lastCheckin === today) {
              showNotification('âŒ You already checked in today! Come back tomorrow.');
              return;
          }
          
          // Simulate IP-based verification (prevent multiple accounts)
          const canCheckIn = verifyDailyCheckin(userId);
          
          if (canCheckIn) {
              user.dailyCheckins = (user.dailyCheckins || 0) + 1;
              user.lastCheckin = today;
              
              awardPoints(activityPoints.dailyCheckin, 'dailyCheckin');
              addActivity('dailyCheckin', 'Daily check-in completed');
              
              // Weekly streak bonus
              if (user.dailyCheckins % 7 === 0) {
                  awardPoints(50, 'weeklyBonus');
                  showNotification('ðŸŽŠ 7-day streak bonus! +50 points');
              }
              
              showNotification('âœ… Daily check-in complete! +10 points');
          } else {
              showNotification('âŒ Check-in failed. Possible duplicate detected.');
          }
      });
  }

  // Simulate IP/device verification
  function verifyDailyCheckin(userId) {
      // In real implementation, check IP address, device fingerprint, etc.
      // For now, use localStorage to simulate basic prevention
      const today = new Date().toDateString();
      const checkinKey = `dailyCheckin_${today}`;
      const existingCheckin = localStorage.getItem(checkinKey);
      
      if (existingCheckin && existingCheckin !== userId) {
          return false; // Possible duplicate
      }
      
      localStorage.setItem(checkinKey, userId);
      return true;
  }

  // ===== VERIFIED CHALLENGE SYSTEM =====

  const verifiedChallenges = {
      'daily-checkin': {
          verify: (user) => {
              const today = new Date().toDateString();
              return user.lastCheckin === today;
          }
      },
      'share-twitter': {
          verify: (user) => {
              return (user.verifiedTweets || []).length > 0;
          }
      },
      'create-meme': {
          verify: (user) => {
              return (user.memeSubmissions || []).length > 0;
          }
      },
      'join-telegram': {
          verify: (user) => {
              // This would require Telegram bot integration
              return user.telegramJoined || false;
          }
      }
  };

  function completeChallenge(challengeId) {
      const user = engagementData.users[userId];
      const challenge = dailyChallenges.find(c => c.id === challengeId);
      
      if (!challenge) return;
      
      // Check if already completed
      if (user.completedChallenges.includes(challengeId)) {
          showNotification('âŒ Challenge already completed today!');
          return;
      }
      
      // Verify challenge completion
      const verifier = verifiedChallenges[challengeId];
      if (verifier && !verifier.verify(user)) {
          showNotification(`âŒ Please complete the required action first: ${challenge.title}`);
          return;
      }
      
      // Award points only after verification
      user.completedChallenges.push(challengeId);
      awardPoints(challenge.reward, 'challengeCompleted');
      addActivity('challengeCompleted', `Completed challenge: ${challenge.title}`);
      showNotification(`ðŸŽ¯ Challenge verified and completed! +${challenge.reward} points`);
      
      updateDailyChallenges();
      saveEngagementData();
  }

  // ===== ENHANCED TWITTER VERIFICATION =====

  async function verifyTwitterEngagement() {
      const user = engagementData.users[userId];
      
      if (!user.username) {
          showNotification('âŒ Please set your username first');
          return;
      }
      
      showNotification('ðŸ” Scanning for Twitter activity...');
      
      try {
          // Simulate scanning user's recent tweets for SENPEPE mentions
          const engagement = await scanTwitterForSENPEPE(user.username);
          
          if (engagement.found) {
              user.twitterStats.tweets += engagement.tweets;
              user.twitterStats.retweets += engagement.retweets;
              user.twitterStats.likes += engagement.likes;
              user.twitterStats.points += engagement.points;
              
              const totalPoints = engagement.tweets * activityPoints.tweetAbout + 
                                engagement.retweets * activityPoints.retweet + 
                                engagement.likes * activityPoints.likeTweet;
              
              awardPoints(totalPoints, 'twitterScan');
              showNotification(`âœ… Found ${engagement.tweets} tweets! +${totalPoints} points`);
              addActivity('twitterScan', `Twitter engagement scan: ${engagement.tweets} tweets found`);
          } else {
              showNotification('âŒ No SENPEPE tweets found. Try posting with #SENPEPE hashtag!');
          }
      } catch (error) {
          showNotification('âŒ Twitter scan failed. Please try again.');
      }
      
      updateTwitterLeaderboard();
      updateTwitterStats();
  }

  // Simulate Twitter API scan
  async function scanTwitterForSENPEPE(username) {
      // In real implementation, use Twitter API
      await new Promise(resolve => setTimeout(resolve, 3000));
      
      return {
          found: Math.random() > 0.4, // 60% chance of finding tweets
