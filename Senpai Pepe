          description: 'Tweet about SENPEPE using our template',
          reward: 25,
          icon: 'ðŸ¦',
          action: 'shareTwitter'
      },
      {
          id: 'invite-friend',
          title: 'Invite a Friend',
          description: 'Share your referral link with a friend',
          reward: 30,
          icon: 'ðŸ‘¥',
          action: 'inviteFriend'
      },
      {
          id: 'create-meme',
          title: 'Create a Meme',
          description: 'Design and submit a SENPEPE meme',
          reward: 20,
          icon: 'ðŸŽ¨',
          action: 'createMeme'
      },
      {
          id: 'join-telegram',
          title: 'Join Telegram',
          description: 'Join our official Telegram community',
          reward: 15,
          icon: 'âœˆï¸',
          action: 'joinTelegram'
      }
  ];
  
  // ===== DAILY CHALLENGES SYSTEM =====
  function initializeDailyChallenges() {
      updateDailyChallenges();
      
      // Set up challenge actions
      document.getElementById('challengesContainer').addEventListener('click', function(e) {
          if (e.target.classList.contains('challenge-action')) {
              const challengeId = e.target.dataset.challengeId;
              completeChallenge(challengeId);
          }
      });
  }
  
  function updateDailyChallenges() {
      const challengesContainer = document.getElementById('challengesContainer');
      const user = engagementData.users[userId];
      const today = new Date().toDateString();
      
      // Reset challenges if it's a new day
      if (user.lastChallengeReset !== today) {
          user.completedChallenges = [];
          user.lastChallengeReset = today;
          saveEngagementData();
      }
      
      challengesContainer.innerHTML = '';
      
      dailyChallenges.forEach(challenge => {
          const isCompleted = user.completedChallenges.includes(challenge.id);
          const challengeElement = document.createElement('div');
          challengeElement.className = `challenge-card ${isCompleted ? 'completed' : ''}`;
          
          challengeElement.innerHTML = `
              <div class="challenge-title">
                  <span>${challenge.icon}</span>
                  <span>${challenge.title}</span>
                  <span class="challenge-reward">+${challenge.reward} pts</span>
              </div>
              <p>${challenge.description}</p>
              <div class="challenge-progress">
                  <div class="challenge-progress-fill" style="width: ${isCompleted ? '100%' : '0%'}"></div>
              </div>
              <button class="challenge-action ${isCompleted ? 'completed' : ''}" data-challenge-id="${challenge.id}">
                  ${isCompleted ? 'Completed' : 'Start Challenge'}
              </button>
          `;
          
          challengesContainer.appendChild(challengeElement);
      });
  }
  
  // ===== MEME CONTEST SYSTEM =====
  function initializeMemeContest() {
      // Set up meme contest if not active
      if (!engagementData.memeContest.active) {
          // Start a new contest that ends in 7 days
          const endDate = new Date();
          endDate.setDate(endDate.getDate() + 7);
          
          engagementData.memeContest = {
              active: true,
              submissions: [],
              endDate: endDate.toISOString()
          };
          saveEngagementData();
      }
      
      updateMemeContestTimer();
      updateMemeSubmissions();
      
      // Set up submission form
      document.getElementById('submitMeme').addEventListener('click', submitMeme);
  }
  
  function updateMemeContestTimer() {
      const timerElement = document.getElementById('contestTimer');
      const endDate = new Date(engagementData.memeContest.endDate);
      const now = new Date();
      const diff = endDate - now;
      
      if (diff <= 0) {
          timerElement.textContent = 'Contest ended! Winners announced soon.';
          engagementData.memeContest.active = false;
          saveEngagementData();
          return;
      }
      
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      
      timerElement.textContent = `Contest ends in: ${days} days, ${hours} hours`;
  }
  
  function updateMemeSubmissions() {
      const gallery = document.getElementById('submissionGallery');
      const submissions = engagementData.memeContest.submissions;
      
      gallery.innerHTML = '';
      
      if (submissions.length === 0) {
          gallery.innerHTML = '<div style="text-align: center; padding: 20px; color: var(--muted);">No submissions yet. Be the first to submit a meme!</div>';
          return;
      }
      
      // Sort by votes (descending)
      submissions.sort((a, b) => b.votes - a.votes);
      
      submissions.forEach((submission, index) => {
          const submissionElement = document.createElement('div');
          submissionElement.className = 'submission-item';
          
          submissionElement.innerHTML = `
              <img src="${submission.imageUrl}" alt="Meme submission" class="submission-image" onerror="this.src='data:image/svg+xml;base64,'">
              <div class="submission-info">
                  <div class="submission-author">${submission.author}</div>
                  <div class="submission-votes">
                      <button class="vote-btn" data-submission-id="${submission.id}">ðŸ‘</button>
                      <span>${submission.votes} votes</span>
                  </div>
              </div>
          `;
          
          gallery.appendChild(submissionElement);
      });
      
      // Set up vote buttons
      document.querySelectorAll('.vote-btn').forEach(btn => {
          btn.addEventListener('click', function() {
              const submissionId = this.dataset.submissionId;
              voteForMeme(submissionId);
          });
      });
  }
  
  function submitMeme() {
      const titleInput = document.getElementById('memeTitle');
      const urlInput = document.getElementById('memeUrl');
      const title = titleInput.value.trim();
      const url = urlInput.value.trim();
      
      if (!title || !url) {
          showNotification('Please provide both a title and image URL');
          return;
      }
      
      const user = engagementData.users[userId];
      const submission = {
          id: 'meme_' + Date.now(),
          title: title,
          imageUrl: url,
          author: user.username || 'Anonymous',
          votes: 0,
          timestamp: new Date().toISOString()
      };
      
      engagementData.memeContest.submissions.push(submission);
      user.memeSubmissions.push(submission.id);
      
      // Award points for submission
      awardPoints(activityPoints.memeSubmitted, 'memeSubmitted');
      addActivity('memeSubmitted', 'Submitted a meme to contest');
      
      // Clear form
      titleInput.value = '';
      urlInput.value = '';
      
      // Update UI
      updateMemeSubmissions();
      saveEngagementData();
      
      showNotification('ðŸŽ¨ Meme submitted! +20 points');
  }
  
  function voteForMeme(submissionId) {
      const submission = engagementData.memeContest.submissions.find(s => s.id === submissionId);
      
      if (!submission) {
          return;
      }
      
      submission.votes += 1;
      updateMemeSubmissions();
      saveEngagementData();
      
      showNotification('ðŸ‘ Vote counted!');
  }
  
  // ===== TWITTER SHILLING LEADERBOARD SYSTEM =====
  function initializeTwitterShilling() {
      updateTwitterLeaderboard();
      updateTwitterStats();
      
      // Set up Twitter actions
      document.getElementById('tweetNow').addEventListener('click', tweetAboutSENPEPE);
      document.getElementById('copyTweet').addEventListener('click', copyTweetTemplate);
      document.getElementById('verifyTweet').addEventListener('click', verifyTweet);
  }
  
  function updateTwitterLeaderboard() {
      const leaderboardContainer = document.getElementById('shillingLeaderboard');
      const users = Object.values(engagementData.users);
      
      // Sort users by Twitter points (descending)
      const sortedUsers = users
          .filter(user => user.twitterStats && user.twitterStats.points > 0)
          .sort((a, b) => b.twitterStats.points - a.twitterStats.points)
          .slice(0, 10); // Top 10 only
      
      leaderboardContainer.innerHTML = '';
      
      if (sortedUsers.length === 0) {
          leaderboardContainer.innerHTML = '<div style="text-align: center; padding: 20px; color: var(--muted);">No Twitter shilling activity yet. Be the first to tweet!</div>';
          return;
      }
      
      sortedUsers.forEach((user, index) => {
          const leaderboardItem = document.createElement('div');
          leaderboardItem.className = 'shilling-item';
          
          leaderboardItem.innerHTML = `
              <div class="shilling-rank">#${index + 1}</div>
              <div class="shilling-user">
                  <div class="shilling-avatar">${user.username ? user.username.charAt(0).toUpperCase() : 'U'}</div>
                  <div class="shilling-details">
                      <div class="shilling-name">${user.username || 'Anonymous'}</div>
                      <div class="shilling-stats">
                          <span>Tweets: ${user.twitterStats.tweets}</span>
                          <span>Likes: ${user.twitterStats.likes}</span>
                          <span>Retweets: ${user.twitterStats.retweets}</span>
                      </div>
                  </div>
              </div>
              <div class="shilling-score">${user.twitterStats.points} pts</div>
          `;
          
          leaderboardContainer.appendChild(leaderboardItem);
      });
  }
  
  function updateTwitterStats() {
      const user = engagementData.users[userId];
      const twitterStats = user.twitterStats || { tweets: 0, retweets: 0, likes: 0, points: 0 };
      
      document.getElementById('tweetsCount').textContent = twitterStats.tweets;
      document.getElementById('retweetsCount').textContent = twitterStats.retweets;
      document.getElementById('likesCount').textContent = twitterStats.likes;
      document.getElementById('shillingPoints').textContent = twitterStats.points;
  }
  
  function tweetAboutSENPEPE() {
      const templates = engagementData.twitterShilling.tweetTemplates;
      const randomTemplate = templates[Math.floor(Math.random() * templates.length)];
      const tweetUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(randomTemplate)}&url=${encodeURIComponent(window.location.href)}&hashtags=SENPEPE,Solana,MemeCoin`;
      
      window.open(tweetUrl, '_blank', 'width=600,height=400');
      
      // Simulate tweet submission (in real app, this would be verified via API)
      setTimeout(() => {
          const user = engagementData.users[userId];
          user.twitterStats.tweets += 1;
          user.twitterStats.points += activityPoints.tweetAbout;
          user.twitterStats.lastTweet = new Date().toISOString();
          
          saveEngagementData();
          updateTwitterLeaderboard();
          updateTwitterStats();
          awardPoints(activityPoints.tweetAbout, 'tweetAbout');
          showNotification('ðŸ¦ Tweet posted! +25 points');
          addActivity('tweetPosted', 'Posted about SENPEPE on Twitter');
      }, 2000);
  }
  
  function copyTweetTemplate() {
      const templates = engagementData.twitterShilling.tweetTemplates;
      const randomTemplate = templates[Math.floor(Math.random() * templates.length)];
      
      navigator.clipboard.writeText(randomTemplate).then(() => {
          showNotification('ðŸ“‹ Tweet template copied to clipboard!');
      });
  }
  
  function verifyTweet() {
      // In a real app, this would verify via Twitter API
      // For demo purposes, we'll simulate verification
      const user = engagementData.users[userId];
      
      // Simulate finding a recent tweet
      const foundTweet = Math.random() > 0.3; // 70% chance of "finding" a tweet
      
      if (foundTweet) {
          user.twitterStats.retweets += Math.floor(Math.random() * 3) + 1;
          user.twitterStats.likes += Math.floor(Math.random() * 10) + 5;
          user.twitterStats.points += activityPoints.retweet + activityPoints.likeTweet;
          
          saveEngagementData();
          updateTwitterLeaderboard();
          updateTwitterStats();
          awardPoints(activityPoints.retweet + activityPoints.likeTweet, 'verifyTweet');
          showNotification('âœ… Tweet verified! Found engagement on your tweet');
      } else {
          showNotification('âŒ No recent SENPEPE tweets found. Try posting one!');
      }
  }

  // ===== USERNAME SYSTEM =====
  function setupUsernameSystem() {
      const user = engagementData.users[userId];
      
      if (!user.username) {
          // Show username modal after a short delay
          setTimeout(() => {
              document.getElementById('usernameModal').style.display = 'flex';
              generateUsernameSuggestion();
          }, 1500);
      }
  }
  
  function generateUsernameSuggestion() {
      const suggestions = [
          "SENPEPE_Warrior", "PepeLegend", "CryptoSenpai", "MemeMaster",
          "SolanaStar", "MoonHunter", "DiamondHands", "AlphaTrader",
          "DegenKing", "NFTCollector", "Web3Warrior", "BlockchainBuddy"
      ];
      const suggestion = suggestions[Math.floor(Math.random() * suggestions.length)];
      document.getElementById('usernameSuggestion').textContent = suggestion;
      return suggestion;
  }
  
  function useSuggestion() {
      const suggestion = document.getElementById('usernameSuggestion').textContent;
      document.getElementById('usernameInput').value = suggestion;
  }
  
  function saveUsername() {
      const input = document.getElementById('usernameInput');
      const error = document.getElementById('usernameError');
      const username = input.value.trim();
      
      // Validation
      if (username.length < 3) {
          error.textContent = "Username too short (min 3 characters)";
          error.style.display = 'block';
          return;
      }
      
      if (username.length > 15) {
          error.textContent = "Username too long (max 15 characters)";
          error.style.display = 'block';
          return;
      }
      
      if (!/^[a-zA-Z0-9_]+$/.test(username)) {
          error.textContent = "Only letters, numbers, and underscores allowed";
          error.style.display = 'block';
          return;
      }
      
      // Save username
      engagementData.users[userId].username = username;
      saveEngagementData();
      
      // Hide modal and show welcome
      document.getElementById('usernameModal').style.display = 'none';
      showNotification(`ðŸ‘‹ Welcome to the community, ${username}!`);
      
      // Update display
      updateUsernameDisplay();
  }
  
  function updateUsernameDisplay() {
      // This will be handled in the leaderboard update to show actual username
  }
  
  // ===== CORE FUNCTIONS =====
  
  function saveEngagementData() {
      localStorage.setItem('senpepeEngagementData', JSON.stringify(engagementData));
  }
  
  function addActivity(type, details) {
      const activity = {
          type,
          details,
          timestamp: new Date().toISOString(),
          userId: userId
      };
      
      engagementData.activities.unshift(activity);
      
      // Keep only last 50 activities for performance
      if (engagementData.activities.length > 50) {
          engagementData.activities = engagementData.activities.slice(0, 50);
      }
      
      saveEngagementData();
      updateActivityFeed();
  }
  
  function awardPoints(points, activityType) {
      const user = engagementData.users[userId];
      user.points += points;
      
      // Check for level up
      const newLevel = calculateLevel(user.points);
      if (newLevel > user.level) {
          user.level = newLevel;
          showNotification(`ðŸŽ‰ Level Up! You're now Level ${newLevel}`);
          addActivity('levelUp', `Reached level ${newLevel}`);
      }
      
      // Check for new badges
      checkForNewBadges();
      
      saveEngagementData();
      updateUI();
  }
  
  function calculateLevel(points) {
      return Math.floor(Math.sqrt(points / 10)) + 1;
  }
  
  function pointsToNextLevel(points, level) {
      const pointsForNextLevel = Math.pow(level, 2) * 10;
      return pointsForNextLevel - points;
  }
  
  function checkForNewBadges() {
      const user = engagementData.users[userId];
      const earnedBadges = user.badges || [];
      
      badgeDefinitions.forEach(badge => {
          if (!earnedBadges.includes(badge.id) && badge.condition(user)) {
              earnedBadges.push(badge.id);
              if (badge.points > 0) {
                  awardPoints(badge.points, 'badgeEarned');
              }
              showNotification(`ðŸ† Badge Unlocked: ${badge.name}`);
              addActivity('badgeEarned', `Unlocked badge: ${badge.name}`);
          }
      });
      
      user.badges = earnedBadges;
      saveEngagementData();
      updateBadges();
  }
  
  function showNotification(message) {
      const notification = document.getElementById('notification');
      const notificationText = document.getElementById('notificationText');
      
      notificationText.textContent = message;
      notification.classList.add('show');
      
      setTimeout(() => {
          notification.classList.remove('show');
      }, 3000);
  }
  
  // ===== AUTOMATED ENGAGEMENT TRIGGERS =====
  
  function automatedEngagementTriggers() {
      const user = engagementData.users[userId];
      
      // Daily check-in bonus (automated if user visits the site)
      const today = new Date().toDateString();
      if (user.lastCheckin !== today) {
          // This would be called on page load, simulating an automatic check-in
          user.dailyCheckins = (user.dailyCheckins || 0) + 1;
          user.lastCheckin = today;
          
          awardPoints(activityPoints.dailyCheckin, 'dailyCheckin');
          addActivity('dailyCheckin', 'Automatic daily check-in');
          
          // Special bonus for consecutive days
          if (user.dailyCheckins % 7 === 0) {
              awardPoints(50, 'weeklyBonus');
              showNotification('ðŸŽŠ 7-day streak bonus! +50 points');
          }
      }
      
      // Simulate community growth (in a real app, this would come from your backend)
      engagementData.community.totalMembers += Math.floor(Math.random() * 5);
      engagementData.community.totalPoints += Math.floor(Math.random() * 100);
      
      saveEngagementData();
  }
  
  // ===== UI UPDATE FUNCTIONS =====
  
  function updateUI() {
      const user = engagementData.users[userId];
      
      // Update stats
      document.getElementById('userPoints').textContent = user.points;
      document.getElementById('userLevel').textContent = user.level;
      document.getElementById('userRank').textContent = `#${calculateUserRank()}`;
      
      // Calculate days active
      const joinDate = new Date(user.joinDate);
      const today = new Date();
      const daysActive = Math.floor((today - joinDate) / (1000 * 60 * 60 * 24)) + 1;
      document.getElementById('daysActive').textContent = daysActive;
      
      // Update level progress
      const pointsToNext = pointsToNextLevel(user.points, user.level);
      const pointsForCurrentLevel = Math.pow(user.level - 1, 2) * 10;
      const pointsInLevel = user.points - pointsForCurrentLevel;
      const levelPointsNeeded = Math.pow(user.level, 2) * 10 - pointsForCurrentLevel;
      const progressPercent = (pointsInLevel / levelPointsNeeded) * 100;
      
      document.getElementById('levelProgress').style.width = `${progressPercent}%`;
      document.getElementById('levelText').textContent = 
          `Level ${user.level}: ${pointsInLevel}/${levelPointsNeeded} points to next level`;
  }
  
  function calculateUserRank() {
      // In a real app, this would calculate against all users
      // For demo, we'll simulate a rank based on points
      const user = engagementData.users[userId];
      return Math.max(1, Math.floor(engagementData.community.totalMembers * (1 - user.points / engagementData.community.totalPoints)));
  }
  
  function updateBadges() {
      const badgeContainer = document.getElementById('badgeContainer');
      const user = engagementData.users[userId];
      const earnedBadges = user.badges || [];
      
      badgeContainer.innerHTML = '';
      
      badgeDefinitions.forEach(badge => {
          const isUnlocked = earnedBadges.includes(badge.id);
          const badgeElement = document.createElement('div');
          badgeElement.className = `badge ${isUnlocked ? 'unlocked' : ''}`;
          badgeElement.innerHTML = `
              <div class="badge-icon">${badge.icon}</div>
              <div>${badge.name}</div>
              ${isUnlocked ? '<small>Unlocked!</small>' : '<small>Locked</small>'}
          `;
          badgeContainer.appendChild(badgeElement);
      });
  }
  
  function updateLeaderboard() {
      const leaderboardContainer = document.getElementById('leaderboardContainer');
      const user = engagementData.users[userId];
      const currentUsername = user.username || "SENPEPE_Fan";
      
      // In a real app, this would fetch from a server
      // For demo, we'll create simulated users
      const simulatedUsers = [
          { name: 'CryptoMaster', points: 1250 },
          { name: 'MemeQueen', points: 980 },
          { name: 'DegenTrader', points: 875 },
          { name: 'SenpaiFan', points: 760 },
          { name: 'BlockchainBuddy', points: 650 },
          { name: currentUsername, points: user.points }, // Use actual username
          { name: 'NFTCollector', points: 520 },
          { name: 'MoonMission', points: 480 },
          { name: 'DiamondHands', points: 420 },
          { name: 'AlphaHunter', points: 390 }
      ];
      
      // Sort by points (descending)
      simulatedUsers.sort((a, b) => b.points - a.points);
      
      leaderboardContainer.innerHTML = '';
      
      simulatedUsers.forEach((user, index) => {
          const isCurrentUser = user.name === currentUsername;
          const rankElement = document.createElement('div');
          rankElement.className = 'leaderboard-item';
          rankElement.innerHTML = `
              <div>
                  <span class="leaderboard-rank">#${index + 1}</span>
                  ${isCurrentUser ? '<strong>' + user.name + '</strong>' : user.name}
              </div>
              <div>${user.points} pts</div>
          `;
          
          if (isCurrentUser) {
              rankElement.style.background = 'rgba(255, 140, 0, 0.2)';
          }
          
          leaderboardContainer.appendChild(rankElement);
      });
  }
  
  function updateMilestones() {
      const milestoneContainer = document.getElementById('milestoneContainer');
      const communityPoints = engagementData.community.totalPoints;
      
      milestoneContainer.innerHTML = '';
      
      engagementData.community.milestones.forEach(milestone => {
          const isReached = communityPoints >= milestone.goal;
          const milestoneElement = document.createElement('div');
          milestoneElement.className = `milestone ${isReached ? 'reached' : ''}`;
          milestoneElement.innerHTML = `
              <div style="font-size: 1.5rem;">${isReached ? 'âœ…' : 'ðŸŽ¯'}</div>
              <div><strong>${milestone.goal.toLocaleString()} Points</strong></div>
              <div>${milestone.reward}</div>
              <div><small>${isReached ? 'Reached!' : `${(communityPoints / milestone.goal * 100).toFixed(1)}% complete`}</small></div>
          `;
          milestoneContainer.appendChild(milestoneElement);
      });
  }
  
  function updateSpotlight() {
      const spotlightContainer = document.getElementById('spotlightContainer');
      
      // In a real app, this would rotate between top contributors
      // For demo, we'll feature a simulated user
      const featuredUsers = [
          { name: 'CryptoMaster', role: 'Top Contributor', achievement: '1,250 points earned' },
          { name: 'MemeQueen', role: 'Content Creator', achievement: 'Created 45 memes' },
          { name: 'CommunityBuilder', role: 'Community Helper', achievement: 'Helped 22 new members' }
      ];
      
      // Rotate featured user daily
      const dayOfYear = Math.floor((new Date() - new Date(new Date().getFullYear(), 0, 0)) / (1000 * 60 * 60 * 24));
      const featuredUser = featuredUsers[dayOfYear % featuredUsers.length];
      
      spotlightContainer.innerHTML = `
          <div class="spotlight-avatar">${featuredUser.name.charAt(0)}</div>
          <h3>${featuredUser.name}</h3>
          <p><strong>${featuredUser.role}</strong></p>
          <p>${featuredUser.achievement}</p>
          <p><small>Featured Community Member</small></p>
      `;
  }
  
  function updateActivityFeed() {
      const activityFeed = document.getElementById('activityFeed');
      const activities = engagementData.activities.slice(0, 10); // Show last 10 activities
      
      activityFeed.innerHTML = '';
      
      if (activities.length === 0) {
          activityFeed.innerHTML = '<div class="activity-item">No recent activity</div>';
          return;
      }
      
      activities.forEach(activity => {
          const activityElement = document.createElement('div');
          activityElement.className = 'activity-item';
          
          let activityText = '';
          switch(activity.type) {
              case 'dailyCheckin':
                  activityText = 'âœ… Completed daily check-in';
                  break;
              case 'shareSocial':
                  activityText = 'ðŸ“¢ Shared on social media';
                  break;
              case 'createMeme':
                  activityText = 'ðŸŽ¨ Created a new meme';
                  break;
              case 'inviteFriend':
                  activityText = 'ðŸ‘¥ Invited a friend to join';
                  break;
              case 'badgeEarned':
                  activityText = `ðŸ† Earned badge: ${activity.details}`;
                  break;
              case 'levelUp':
                  activityText = `â­ ${activity.details}`;
                  break;
              case 'challengeCompleted':
                  activityText = `ðŸŽ¯ ${activity.details}`;
                  break;
              case 'memeSubmitted':
                  activityText = 'ðŸŽ¨ Submitted a meme to contest';
                  break;
              case 'tweetPosted':
                  activityText = 'ðŸ¦ Posted about SENPEPE on Twitter';
                  break;
              case 'twitterVerified':
                  activityText = 'âœ… Verified Twitter post';
                  break;
              default:
                  activityText = `Activity: ${activity.type}`;
          }
          
          const timeAgo = getTimeAgo(activity.timestamp);
          
          activityElement.innerHTML = `
              <div>${activityText}</div>
              <div class="timestamp">${timeAgo}</div>
          `;
          
          activityFeed.appendChild(activityElement);
      });
  }
  
  function getTimeAgo(timestamp) {
      const now = new Date();
      const activityTime = new Date(timestamp);
      const diffMs = now - activityTime;
      const diffMins = Math.floor(diffMs / (1000 * 60));
      const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
      const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
      
      if (diffMins < 1) return 'Just now';
      if (diffMins < 60) return `${diffMins} min ago`;
      if (diffHours < 24) return `${diffHours} hr ago`;
      return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
  }
  
  // ===== EVENT LISTENERS =====
  
  document.getElementById('dailyCheckin').addEventListener('click', function() {
      const user = engagementData.users[userId];
      const today = new Date().toDateString();
      
      if (user.lastCheckin === today) {
          showNotification('You already checked in today!');
          return;
      }
      
      user.dailyCheckins = (user.dailyCheckins || 0) + 1;
      user.lastCheckin = today;
      
      awardPoints(activityPoints.dailyCheckin, 'dailyCheckin');
      addActivity('dailyCheckin', 'Manual daily check-in');
      
      // Special bonus for consecutive days
      if (user.dailyCheckins % 7 === 0) {
          awardPoints(50, 'weeklyBonus');
          showNotification('ðŸŽŠ 7-day streak bonus! +50 points');
      }
  });
  
  document.getElementById('shareSocial').addEventListener('click', function() {
      showTwitterVerification();
  });
  
  document.getElementById('createMeme').addEventListener('click', function() {
      showMemeSubmission();
  });
  
  // Set up invite friend with rate limiting
  function setupInviteFriend() {
      document.getElementById('inviteFriend').addEventListener('click', function() {
          const user = engagementData.users[userId];
          const now = Date.now();
          const lastInviteAction = user.lastInviteAction || 0;
          const cooldownTime = 2 * 60 * 1000; // 2 minutes
          
          if (now - lastInviteAction < cooldownTime) {
              const remaining = Math.ceil((cooldownTime - (now - lastInviteAction)) / 1000);
              showNotification(`â³ Please wait ${remaining} seconds before inviting again`);
              return;
          }
          
          user.lastInviteAction = now;
          user.invites = (user.invites || 0) + 1;
          
          // Generate referral link
          const refLink = `${window.location.origin}?ref=${userId}`;
          navigator.clipboard.writeText(refLink).then(() => {
              awardPoints(activityPoints.inviteFriend, 'inviteFriend');
              addActivity('inviteFriend', 'Invited a friend to join');
              showNotification('ðŸ‘¥ Referral link copied! +25 points');
          });
      });
  }

  // ===== INITIALIZATION =====
  
  function initializeEngagementSystem() {
      // Setup username system first
      setupUsernameSystem();
      
      // Run automated triggers
      automatedEngagementTriggers();
      
      // Initialize new systems
      initializeDailyChallenges();
      initializeMemeContest();
      initializeTwitterShilling();
      
      // Update all UI components
      updateUI();
      updateBadges();
      updateLeaderboard();
      updateMilestones();
      updateSpotlight();
      updateActivityFeed();
      updateDailyChallenges();
      updateTwitterStats();
      
      // Set up periodic updates
      setInterval(automatedEngagementTriggers, 30000); // Update every 30 seconds
      setInterval(updateSpotlight, 3600000); // Rotate spotlight hourly
      setInterval(updateMemeContestTimer, 60000); // Update contest timer every minute
      
      console.log('SENPEPE Auto-Engagement System initialized');
  }
  
  // Start the system when page loads
  window.addEventListener('DOMContentLoaded', initializeEngagementSystem);

  // Helper: check if local asset exists (tries png/jpg/jpeg/webp)
  function imgExists(url){return new Promise(r=>{const i=new Image();i.onload=()=>r(true);i.onerror=()=>r(false);i.src=url;});}
  async function resolveLocal(base){const exts=['.png','.jpg','.jpeg','.webp'];for(const ext of exts){const u=`assets/${base}${ext}`;if(await imgExists(u))return u;}return null;}

  /* HERO stars + streaks */
  (function(){
    const warp = document.getElementById('warp');
    for(let i=0;i<120;i++){
      const s=document.createElement('div'); s.className='star';
      s.style.top=(Math.random()*100)+'%'; s.style.left=(Math.random()*100)+'%';
      s.style.animationDelay=(Math.random()*0.9)+'s'; warp.appendChild(s);
    }
    const N=48; for(let i=0;i<N;i++){ const d=document.createElement('div'); d.className='streak';
      d.style.setProperty('--top',(Math.random()*100)+'%');
      d.style.setProperty('--left',(Math.random()*120+20)+'vw');
      d.style.setProperty('--len',(80+Math.random()*120)+'px');
      d.style.setProperty('--angle',(-10-Math.random()*8)+'deg');
      d.style.setProperty('--dur',(8+Math.random()*8).toFixed(2)+'s');
      d.style.setProperty('--delay',(Math.random()*8).toFixed(2)+'s');
      d.style.setProperty('--op',(0.4+Math.random()*0.5).toFixed(2));
      warp.appendChild(d);
    }
  })();

  /* ===== PLANET BELT ===== */
  (async function(){
    const field = document.getElementById('planetField'); if(!field) return;

    const order = [
      {key:'jupiter', w:240, pos:'bottom', y:'12%'},
      {key:'mars',    w:170, pos:'top',    y:'22%'},
      {key:'earth',   w:200, pos:'bottom', y:'18%'},
      {key:'moon',    w:150, pos:'top',    y:'9%'},
      {key:'pluto',   w:140, pos:'bottom', y:'26%'},
      // Saturn removed from here
      {key:'sun',     w:260, pos:'bottom', y:'6%',  sun:true}
    ];

    const urls={}; for(const p of order){ urls[p.key]=await resolveLocal(p.key); }
    const xs=['3%','19%','31%','46%','68%','95%']; // Removed one position

    const track=document.createElement('div'); track.className='belt-track'; track.style.setProperty('--beltDur','26s');
    const g1=document.createElement('div'); g1.className='belt-group g1';
    const g2=document.createElement('div'); g2.className='belt-group g2';

    function fill(group){
      order.forEach((p,idx)=>{
        const u=urls[p.key]; if(!u) return;
        const el=document.createElement('div');
        el.className='planet-img'+(p.ringed?' ringed':'')+(p.sun?' sun':'');
        el.style.setProperty('--w', p.w+'px');
        el.style.left = xs[idx];
        if(p.pos==='top'){ el.style.top=p.y; } else { el.style.bottom=p.y; }
        el.style.backgroundImage=`url('${u}')`;
        group.appendChild(el);
      });
    }
    fill(g1); fill(g2);
    track.appendChild(g1); track.appendChild(g2);
    field.innerHTML=''; field.appendChild(track);
  })();

  /* HOW stars */
  (function(){
    const sky=document.getElementById('howSky');
    for(let i=0;i<110;i++){
      const s=document.createElement('div'); s.className='how-star';
      s.style.top=(Math.random()*100)+'%'; s.style.left=(Math.random()*100)+'%';
      s.style.animationDelay=(Math.random()*1)+'s'; sky.appendChild(s);
    }
  })();

