  /* Rocket embers â€” always on */
  (function(){
    const wrap = document.getElementById('rocketWrap'); if(!wrap) return;
    function addEmber(){
      const e=document.createElement('span'); e.className='ember';
      const sizes=[12,14,16,18,20,22,24]; const s=sizes[Math.floor(Math.random()*sizes.length)];
      e.style.setProperty('--w',s+'px'); e.style.setProperty('--h',s+'px');
      e.style.setProperty('--ey',(Math.floor(Math.random()*40)-20)+'px');
      e.style.setProperty('--s',(0.7+Math.random()*0.6).toFixed(2));
      e.style.setProperty('--t',(2.2+Math.random()*2.2).toFixed(2)+'s');
      e.style.setProperty('--d',(Math.random()*1.8).toFixed(2)+'s');
      wrap.appendChild(e); setTimeout(()=>{e.remove()},6000);
    }
    for(let i=0;i<16;i++) addEmber(); setInterval(addEmber,220);
  })();

  /* Money/bags rails in HOW â€” always on */
  (async function(){
    const bag  = await resolveLocal('moneybag1') || 'https://img.icons8.com/3d-fluency/188/money-bag.png';
    const cash = await resolveLocal('cash1')      || 'https://img.icons8.com/3d-fluency/188/stack-of-money.png';

    const how = document.getElementById('how');
    const railL = document.getElementById('howRailL');
    const railR = document.getElementById('howRailR');

    const items=[];
    function make(rail, src){
      const d=document.createElement('div');
      d.className='sideItem';
      d.style.setProperty('--w', (110 + Math.floor(Math.random()*120)) + 'px');
      d.dataset.offset = (Math.random()*120 - 60).toFixed(0);
      d.dataset.speed  = (0.85 + Math.random()*0.5).toFixed(2);
      const img=document.createElement('img'); img.src=src; img.alt='';
      d.appendChild(img); rail.appendChild(d); items.push(d);
    }
    for(let i=0;i<5;i++){ make(railL, cash); make(railR, bag); }

    function clamp(n,min,max){return Math.max(min, Math.min(max,n));}
    function updatePositions(){
      const rect = how.getBoundingClientRect();
      const vh = window.innerHeight;
      const inView = rect.top < vh*0.9 && rect.bottom > vh*0.1;
      const span = rect.height + vh*0.8;
      const t = clamp((vh*0.9 - rect.top) / span, 0, 1);
      for(const el of items){
        el.style.opacity = inView ? .95 : 0;
        const off = parseFloat(el.dataset.offset);
        const spd = parseFloat(el.dataset.speed);
        const y   = -120 + t * (span*0.85) * spd + off;
        el.style.transform = `translate(-50%, ${y}px)`;
      }
    }
    const io = new IntersectionObserver(()=>updatePositions(), {threshold:[0,0.1,0.5,0.9,1]});
    io.observe(how);
    window.addEventListener('scroll', ()=>requestAnimationFrame(updatePositions), {passive:true});
    window.addEventListener('resize', updatePositions);
    updatePositions();
  })();

  /* Meme overlay click-cycler â€” auto-rotates */
  (async function(){
    const stage=document.getElementById('meme-stage');
    const overlay=document.getElementById('overlaySwap');
    const keys=['sen1','sen2','sen3','sen4','sen5','sen6','sen7','sen8','sen9','sen10'];
    const urls=[]; for(const k of keys){ const u=await resolveLocal(k); if(u) urls.push(u); }
    const bg=await resolveLocal('sen6'); if(bg) stage.style.backgroundImage=`url('${bg}')`;
    let idx=0, timer=null;
    function setImg(i){ if(!urls.length) return; idx=(i+urls.length)%urls.length; overlay.src=urls[idx]; }
    function startAuto(){ stopAuto(); timer=setInterval(()=>setImg(idx+1), 4500); }
    function stopAuto(){ if(timer){ clearInterval(timer); timer=null; } }
    overlay.addEventListener('click',()=>{ setImg(idx+1); startAuto(); });
    stage.addEventListener('mouseenter', stopAuto);
    stage.addEventListener('mouseleave', startAuto);
    setImg(0); startAuto();
  })();

  // Toast helper
  function toast(msg){
    const t=document.getElementById('toast');
    t.textContent=msg; t.classList.add('show');
    setTimeout(()=>t.classList.remove('show'), 2200);
  }

  // Share on X
  document.getElementById('shareBtn')?.addEventListener('click', ()=>{
    const text = encodeURIComponent("SENPEPE launches Oct 17 @ 7pm on Solana. Join the movement. #SENPEPE");
    const url  = encodeURIComponent(location.href);
    const u = `https://twitter.com/intent/tweet?text=${text}&url=${url}`;
    window.open(u, '_blank', 'noopener,noreferrer');
  });

  // Referral link: add ?ref=<random-7>
  document.getElementById('refBtn')?.addEventListener('click', ()=>{
    const id = Math.random().toString(36).slice(2,9);
    const base = location.origin + location.pathname;
    const ref = `${base}?ref=${id}`;
    navigator.clipboard.writeText(ref).then(()=>toast("Referral link copied"));
  });

  // Append ref to outbound links if present
  (function(){
    const params = new URLSearchParams(location.search);
    const ref = params.get('ref');
    if(!ref) return;
    document.querySelectorAll('[data-append-ref]').forEach(a=>{
      try{
        const u=new URL(a.href);
        u.searchParams.set('ref', ref);
        a.href=u.toString();
      }catch{}
    });
  })();

  // Email validation (front-end only)
  document.getElementById('mailForm')?.addEventListener('submit', (e)=>{
    e.preventDefault();
    const input = document.getElementById('mailInput');
    const err = document.getElementById('errorMessage');
    const val = input.value.trim();
    const ok = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(val);
    if(!ok){
      input.classList.add('error'); err.classList.add('show'); return;
    }
    input.classList.remove('error'); err.classList.remove('show');
    toast("You're on the list!");
    // TODO: hook to your backend or service (e.g., Formspree, Brevo, Mailchimp)
    input.value='';
  });

  // Copy Contract + Info
  document.getElementById('copyCA')?.addEventListener('click', ()=>{
    const ca = document.getElementById('ca')?.textContent?.trim() || '';
    navigator.clipboard.writeText(ca).then(()=>toast("Contract copied"));
  });
  document.getElementById('copyInfo')?.addEventListener('click', ()=>{
    const lines = [
      "Ticker: SENPEPE",
      "Network: Solana",
      `Launch: ${document.getElementById('infoLaunch')?.textContent || 'TBA'}`,
      `Contract: ${document.getElementById('ca')?.textContent || 'TBA'}`,
      `Price (USD): ${document.getElementById('priceUsd')?.textContent || 'TBA'}`,
      `Price (SOL): ${document.getElementById('priceSol')?.textContent || 'TBA'}`,
      `Market Cap: ${document.getElementById('mcap')?.textContent || 'TBA'}`,
      `Liquidity: ${document.getElementById('liq')?.textContent || 'TBA'}`,
      `Total Supply: ${document.getElementById('supply')?.textContent || 'TBA'}`,
      `Tax: ${document.getElementById('tax')?.textContent || 'TBA'}`
    ];
    navigator.clipboard.writeText(lines.join("\n")).then(()=>toast("Info summary copied"));
  });

  // Corner flip assets (optional if present)
  (async function(){
    const L = document.getElementById('solLeft');
    const R = document.getElementById('solRight');
    const u = await resolveLocal('sol1');
    if(u){ L.src = u; R.src = u; } else { L.remove(); R.remove(); }
  })();

  // Diamond shower that forms SENPEPE on click of How to Buy
  (async function(){
    const buy = document.getElementById('buyBtn'); if(!buy) return;
    const diamondURL = await resolveLocal('diamond') || 'https://img.icons8.com/emoji/96/gem-stone.png';

    function makeLayer(){
      let layer = document.querySelector('.diamond-layer');
      if(!layer){ layer = document.createElement('div'); layer.className='diamond-layer'; document.body.appendChild(layer); }
      layer.innerHTML=''; return layer;
    }

    function samplePoints(text){
      const w = window.innerWidth, h = Math.max(180, Math.min(360, Math.floor(window.innerHeight*0.35)));
      const cvs=document.createElement('canvas'); cvs.width=w; cvs.height=h; const ctx=cvs.getContext('2d');
      const fontSize = Math.min(260, Math.max(110, Math.floor(w*0.18)));
      ctx.clearRect(0,0,w,h); ctx.fillStyle='#fff'; ctx.textBaseline='middle'; ctx.textAlign='center';
      ctx.font = `900 ${fontSize}px system-ui,Segoe UI,Arial`;
      ctx.fillText(text, w/2, h/2);
      const img=ctx.getImageData(0,0,w,h).data;
      const step = Math.max(8, Math.floor(fontSize/18));
      const pts=[];
      for(let y=0;y<h;y+=step){ for(let x=0;x<w;x+=step){ const i=((y*w)+x)*4+3; if(img[i]>160) pts.push({x,y}); }}
      return {pts,w,h};
    }

    function showerAndForm(text){
      const layer = makeLayer();
      const {pts,w,h} = samplePoints(text);
      const needed = Math.min(pts.length, 260);
      const pick = []; for(let i=0;i<needed;i++){ pick.push(pts[Math.floor(i*(pts.length/needed))]); }

      const diamonds=[];
      for(let i=0;i<needed;i++){
        const d=document.createElement('img'); d.src=diamondURL; d.className='diamond';
        const size = 22 + Math.random()*18; d.style.setProperty('--w', size+'px'); d.style.setProperty('--s', (0.85+Math.random()*0.4).toFixed(2));
        const sx = Math.random()*window.innerWidth; const sy = -40 - Math.random()*120;
        d.style.setProperty('--x', sx+'px'); d.style.setProperty('--y', sy+'px');
        layer.appendChild(d); diamonds.push(d);
      }

      requestAnimationFrame(()=>{ diamonds.forEach((d)=>{ const fy = window.innerHeight*0.2 + Math.random()*window.innerHeight*0.6; d.style.opacity=1; d.style.setProperty('--y', fy+'px');}); });
      setTimeout(()=>{
        const topOffset = Math.round(window.innerHeight*0.25);
        diamonds.forEach((d,idx)=>{
          const p = pick[idx % pick.length];
          const tx = p.x; const ty = topOffset + p.y - h/2;
          d.style.setProperty('--x', tx+'px');
          d.style.setProperty('--y', Math.max(40, ty)+'px');
        });
      }, 1200);
      setTimeout(()=>{ diamonds.forEach(d=>d.style.opacity=0); }, 2800);
      setTimeout(()=>{ const layer=document.querySelector('.diamond-layer'); if(layer && layer.parentNode) layer.remove(); }, 3600);
    }

    buy.addEventListener('click', (e)=>{
      // let the link still work, but flex the effect
      showerAndForm('SENPEPE');
    });
  })();

